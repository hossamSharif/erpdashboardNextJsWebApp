{
  "name": "multi-shop-accounting",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "commit": "cz",
    "prepare": "husky install || true",
    "db:setup": "bash scripts/db-setup.sh",
    "db:reset": "bash scripts/db-reset.sh",
    "db:up": "docker-compose up -d postgres redis",
    "db:down": "docker-compose down"
  },
  "devDependencies": {
    "turbo": "^2.3.3",
    "prettier": "^3.4.2",
    "eslint": "^8.57.1",
    "typescript": "^5.3.3",
    "husky": "^9.1.7",
    "lint-staged": "^15.3.0",
    "commitizen": "^4.3.1",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.9"
}