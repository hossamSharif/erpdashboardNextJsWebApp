# Database
DATABASE_URL="postgresql://user:password@localhost:5432/multi_shop_accounting?schema=public"
DIRECT_URL="postgresql://user:password@localhost:5432/multi_shop_accounting?schema=public"

# Redis/Upstash
REDIS_URL="redis://localhost:6379"
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-min-32-chars"

# Supabase
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# API Configuration
NEXT_PUBLIC_API_URL="http://localhost:3000/api"
API_SECRET_KEY="your-api-secret-key"

# Email Service (Resend)
RESEND_API_KEY="re_your_api_key"
EMAIL_FROM="noreply@yourdomain.com"

# File Storage
STORAGE_BUCKET_NAME="documents"
MAX_FILE_SIZE="10485760"

# Sentry Error Tracking
SENTRY_DSN=""
NEXT_PUBLIC_SENTRY_DSN=""
SENTRY_ORG=""
SENTRY_PROJECT=""
SENTRY_AUTH_TOKEN=""

# Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=""

# Environment
NODE_ENV="development"
NEXT_PUBLIC_APP_ENV="development"

# Feature Flags
ENABLE_OFFLINE_MODE="true"
ENABLE_PUSH_NOTIFICATIONS="false"
ENABLE_ANALYTICS="false"

# Firebase (for mobile push notifications)
FIREBASE_PROJECT_ID=""
FIREBASE_CLIENT_EMAIL=""
FIREBASE_PRIVATE_KEY=""

# Localization
DEFAULT_LOCALE="en"
SUPPORTED_LOCALES="en,ar"

# Rate Limiting
RATE_LIMIT_REQUESTS="100"
RATE_LIMIT_WINDOW="60000"